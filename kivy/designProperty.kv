<MyLayout>
	username:username
	password:password
	GridLayout:
		cols:1
		size: root.width, root.height
		
		GridLayout:
			cols:2
			
			Label:
				text:"Username"
				
			TextInput:
				id: username
				multiline:False
				
			Label:
				text:"password"
				
			TextInput:
				id: password
				multiline:False
				password: True
		
		Button:
			text:"Login"
			on_press: root.btnLogin()